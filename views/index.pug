extends layout

block content    
  body
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='/') Off The Threads Dashboard 
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item.active
              a.nav-link(href='/')
                | Home 
                span.sr-only (current)
            li.nav-item
              a.nav-link(href='/inventory') Current Inventory 
            li.nav-item
              a.nav-link(href='#alteration_schedule') Alteration Schedule 
            li.nav-item
              a.nav-link(href='#transactions') Transactions 
      .jumbotron.jumbotron-fluid
        .container
          h1.display-4 Add New Item 
          p.lead
            | Add a new item to the inventory 
      .container
        form(id="itemInput" method="post" action="/")
          .form-group
            label(for='exampleFormControlInput1') Item Name 
            input#exampleFormControlInput1.form-control(type='text' placeholder='Cool T-Shirt' name='item_name')
          .form-group
            label(for='exampleFormControlSelect1') Size 
            select#exampleFormControlSelect1.form-control(name='item_size')
              option XXS 
              option XS 
              option S
              option M
              option L 
              option XL 
              option XXL 
          .form-group
            label(for='exampleFormControlInput1') Item Category 
            input#exampleFormControlInput1.form-control(type='text' placeholder='t-shirt' name='item_category')
          .form-group
            label(for='exampleFormControlSelect1') Item Type 
            select#exampleFormControlSelect1.form-control(name='item_type')
              option W 
              option M 
          .form-group
            label(for='exampleFormControlSelect1') Item Color 
            select#exampleFormControlSelect1.form-control(name='item_color')
              option beige 
              option black 
              option blue
              option brown 
              option gold 
              option gray 
              option green 
              option multi 
              option orange 
              option pink 
              option purple 
              option red 
              option white 
              option yellow 
          .form-group
            label(for='exampleFormControlSelect1') Item Condition 
            select#exampleFormControlSelect1.form-control(name='item_condition')
              option perfect 
              option good 
              option worn 
          .form-group
            label(for='exampleFormControlSelect1') Item Era 
            select#exampleFormControlSelect1.form-control(name='item_era')
              option 60 
              option 70 
              option 80 
              option 90 
              option 00 
          .form-group
            label(for='exampleFormControlTextarea1') Item Description 
            textarea#exampleFormControlTextarea1.form-control(rows='3' name='item_description')
          .form-group
            label(for='exampleFormControlSelect1') Item Reworked 
            select#exampleFormControlSelect1.form-control(name='item_reworked')
              option true 
              option false 
          .form-group
            label(for='exampleFormControlSelect1') Item Bought 
            select#exampleFormControlSelect1.form-control(name='item_bought')
              option true 
              option false 
          .form-group
            label(for='exampleFormControlInput1') Item Price 
            input#exampleFormControlInput1.form-control(type='text' placeholder='$5' name='item_price')
          button.btn.btn-outline-primary(type='submit') Submit
