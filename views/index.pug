extends layout

block content    
  body
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='#') Off The Threads Dashboard 
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item.active
              a.nav-link(href='#')
                | Home 
                span.sr-only (current)
            li.nav-item
              a.nav-link(href='#add_inventory') Current Inventory 
            li.nav-item
              a.nav-link(href='#alteration_schedule') Alteration Schedule 
            li.nav-item
              a.nav-link(href='#transactions') Transactions 
      .jumbotron.jumbotron-fluid
        .container
          h1.display-4 Add New Item 
          p.lead
            | Add a new item to the inventory 
      .container
        form
          .form-group
            label(for='exampleFormControlInput1') Item Name 
            input#exampleFormControlInput1.form-control(type='text' placeholder='Cool T-Shirt')
          .form-group
            label(for='exampleFormControlSelect1') Quantity
            select#exampleFormControlSelect1.form-control
              option 1
              option 2
              option 3
              option 4
              option 5
          .form-group
            label(for='exampleFormControlSelect2') Example multiple select
            select#exampleFormControlSelect2.form-control(multiple='')
              option 1
              option 2
              option 3
              option 4
              option 5
          .form-group
            label(for='exampleFormControlTextarea1') Example textarea
            textarea#exampleFormControlTextarea1.form-control(rows='3')
          button.btn.btn-outline-primary(type='button') Submit
      .jumbotron.jumbotron-fluid
        .container
          h1.display-4 Update an Item 
          p.lead
            | Update an existing item in the inventory 
